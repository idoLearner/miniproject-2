  <body class="container">
    <%- include('../public/partials/nav.ejs')  %> 
    <div class="row border-bottom mb-3 border">
      <div class="col-3">
        <%- include('../public/partials/sidebar.ejs')  %> 
      </div>

      <div class="col-9 border-start">
        <h1><%=header%></h1>
        <a href="/records" class="btn btn-dark mb-2 mt-2">Backâ¬…</a><hr>
        <form action="/update" method="post">
          <div class="form-group mb-3">
            <h6 for="vehicle">VEHICLE</h6>
            <input
              type="text"
              class="form-control"
              id="vehicle"
              name="vehicle"
              placeholder="Enter Vehicle"
            />
          </div>
          <div class="form-group mb-3">
            <h6 for="make_model">MAKE AND MODEL</h6>
            <input
              type="text"
              class="form-control"
              id="make_model"
              name="make_model"
              placeholder="Enter Make and Model"
            />
          </div>
          <div class="form-group mb-3">
            <h6 for="year">YEAR</h6>
            <input
              type="year"
              class="form-control"
              id="year"
              name="year"
              placeholder="Enter Year"
            />
          </div>
          <div class="form-group mb-3">
            <h6 for="description">DESCRIPTION</h6>
            <input
              type="text"
              class="form-control"
              id="description"
              name="description"
              placeholder="Enter Description"
            />
          </div>
          <!-- <div class="form-group">
            <label for="status">STATUS: </label><BR>
            <input
            type="radio" id="status" 
            name="status" value="Available"> Available</input>
            <input
            type="radio" id="status" 
            name="status" value="Unavailable"> Unavailable</input>
          </div> -->
          <div class="form-check mb-3"><h6 for="status">STATUS: </h6>
            <input class="form-check-input" type="radio" name="status" id="status" value="Available">
            <label class="form-check-label" for="Available">
              Available
            </label>
          </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="radio" name="status" id="status" value="Unavailable">
              <label class="form-check-label" for="Unavailable">
                Unavailable
              </label>
            </div>
          
          <button type="submit" class="btn btn-success mb-3">Submit</button>
        </form>
        <br />
    </div>
  </div>
